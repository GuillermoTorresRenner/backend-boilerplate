model Users {
    id             String    @id @default(cuid())
    email          String    @unique
    password       String
    name           String?
    surname        String?
    roleId         String
    role           Role      @relation(fields: [roleId], references: [id])
    lastConnection DateTime?
    createdAt      DateTime  @default(now())
    updatedAt      DateTime  @updatedAt
    refreshToken   String?

    @@map("users")
}
