model Users {
    id                 String    @id @default(cuid())
    email              String    @unique
    password               String
    name                   String?
    surname                String?
    role                   Role      @default(USER)
    lastConnection         DateTime?
    createdAt              DateTime  @default(now())
    updatedAt              DateTime  @updatedAt
   

    @@map("users")
}

enum Role {
    ADMIN
   USER

    @@map("role")
}
